%h1 Listing votes

%table
  %thead
    %tr
      %th Value
      %th Organisation
      %th Election
      %th User
      %th Date voted
      %th History
      %th
      %th
      %th

  %tbody
    - @votes.each do |vote|
      %tr
        %td= vote.value
        %td= vote.organisation_id
        %td= vote.election_id
        %td= vote.user_id
        %td= vote.date_voted
        %td= vote.history
        %td= link_to 'Show', organisation_election_vote_path(current_organisation, @election, vote)
        %td= link_to 'Edit', edit_organisation_election_vote_path(current_organisation, @election, vote)
        %td= link_to 'Destroy', organisation_election_vote_path(current_organisation, @election, vote), :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Vote', new_organisation_election_vote_path(current_organisation, @election)
